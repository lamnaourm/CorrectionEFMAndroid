<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEntreprise">

    <EditText
        android:id="@+id/ers"
        style="@style/styleED"
        android:hint="Tapez votre raison sociale..." />

    <EditText
        android:id="@+id/ead"
        style="@style/styleED"
        android:layout_below="@id/ers"
        android:hint="Tapez votre adresse..." />

    <EditText
        android:id="@+id/eca"
        style="@style/styleED"
        android:layout_below="@id/ead"
        android:hint="Tapez votre capital..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eca">

        <Button
            android:id="@+id/addb1"
            style="@style/styleb"
            android:text="@string/btn1add" />

        <Button
            android:id="@+id/addb2"
            style="@style/styleb"
            android:text="@string/btn2add" />

    </LinearLayout>


</RelativeLayout>